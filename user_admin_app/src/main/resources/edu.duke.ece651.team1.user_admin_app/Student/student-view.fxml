<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.duke.ece651.team1.user_admin_app.controller.StudentControllerJavaFX">
   <top>
      <BorderPane prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #0577B1;" BorderPane.alignment="CENTER">
         <center>
            <Label text="User Admin Center" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="33.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="button_add_student" mnemonicParsing="false" onAction="#addStudentButtonClicked" text="Add Student" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Region prefHeight="30.0" prefWidth="200.0" />
            <Button fx:id="button_update_student" mnemonicParsing="false" onAction="#updateStudentButtonClicked" text="Update Student" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Region layoutX="10.0" layoutY="110.0" prefHeight="30.0" prefWidth="200.0" />
            <Button fx:id="button_remove_student" mnemonicParsing="false" onAction="#removeStudentButtonClicked" text="Remove Student" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Region layoutX="10.0" layoutY="160.0" prefHeight="30.0" prefWidth="200.0" />
            <Button fx:id="button_back_to_main_view" mnemonicParsing="false" onAction="#backMainPageButtonClicked" text="Back to the Menu">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
