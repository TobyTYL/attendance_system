<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.java_fx.AddProfessorController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Text text="Enter the name of the professor:"/>
    <TextField fx:id="nameTextField"/>
    <Button text="Apply" onAction="#onApplyButtonClick" fx:id="applyButton"/>
    <Label fx:id="confirmationLabel"/>
    <Button text="Back" onAction="#onBackButtonClick" fx:id="backButton"/>
</VBox>
